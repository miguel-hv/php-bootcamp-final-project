
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/register.css') }}">
{% endblock %}


{% block body %}

    <h2 class="title title--form">Registro</h2>
    <div class="c-form">
        {{ form_start(registerForm) }}
        {{ form_row(registerForm.username) }}
        {{ form_row(registerForm.email) }}
        {{ form_row(registerForm.avatar) }}
        {{ form_row(registerForm.password) }}
        <button class="button" type="submit"> Enviar </button>
        {{ form_end(registerForm) }}
    </div>


{% endblock %}